{
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-optional", "--frozen-lockfile"],
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  }
}
